<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/widget_tmp_textview"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/wighet_city_textview"
        android:gravity="left"
        android:paddingLeft="5dp"
        android:text="气温"
        android:textColor="#fff"
        android:textSize="23sp"/>

    <TextView
        android:id="@+id/widget_updatetime_textview"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_alignEnd="@+id/widget_tmp_textview"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/wighet_city_textview"
        android:gravity="left|center_vertical"
        android:paddingLeft="20dp"
        android:text="更新时间"
        android:textColor="#fff"
        android:textSize="13sp"/>

    <TextView
        android:id="@+id/widget_mintmp_textview"
        android:layout_width="wrap_content"
        android:layout_height="12dp"
        android:layout_above="@+id/widget_updatetime_textview"
        android:layout_below="@id/widget_tmp_textview"
        android:layout_toEndOf="@+id/wighet_city_textview"
        android:gravity="left|center_vertical"
        android:paddingLeft="5dp"
        android:text="低温"
        android:textColor="#fff"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/wighet_city_textview"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="城市"
        android:textColor="#fff"
        android:textSize="23sp"/>

    <TextView
        android:id="@+id/widget_maxtmp_textview"
        android:layout_width="wrap_content"
        android:layout_height="12dp"
        android:layout_alignTop="@id/widget_mintmp_textview"
        android:layout_alignBottom="@id/widget_mintmp_textview"
        android:layout_marginLeft="3dp"
        android:layout_toRightOf="@id/widget_mintmp_textview"
        android:gravity="center"
        android:text="高温"
        android:textColor="#fff"
        android:textSize="15sp"/>

</RelativeLayout>